<Window x:Class="BGAssist.Braille.Client.Forms.frmNewInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set new item title" Height="155" Width="453" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid Background="Azure">
        <Grid>
            <Label Content="New node name" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
            <TextBox Name="txtTitleText" HorizontalAlignment="Left" Margin="160,20,0,70" TextWrapping="Wrap" Text="" Width="200"/>

            <Button Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="170,80,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>
            <Button Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="270,80,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        </Grid>

    </Grid>
</Window>
